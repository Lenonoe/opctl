{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://spec.opspec.io/0.1.3/schema/param.json",
  "title": "param",
  "description": "Parameter of an op",
  "type": "object",
  "properties": {
    "description": {
      "description": "Description of the parameter",
      "type": "string"
    },
    "isSecret": {
      "description": "If the parameter is secret",
      "type": "boolean"
    }
  },
  "oneOf": [
    {
      "properties": {
        "dir": {
          "$ref": "#/definitions/dirParam"
        }
      },
      "required": [
        "dir"
      ]
    },
    {
      "properties": {
        "file": {
          "$ref": "#/definitions/fileParam"
        }
      },
      "required": [
        "file"
      ]
    },
    {
      "properties": {
        "socket": {
          "$ref": "#/definitions/socketParam"
        }
      },
      "required": [
        "socket"
      ]
    },
    {
      "properties": {
        "string": {
          "$ref": "#/definitions/stringParam"
        }
      },
      "required": [
        "string"
      ]
    }
  ],
  "additionalProperties": false,
  "definitions": {
    "dirParam": {
      "title": "dirParam",
      "description": "Directory parameter of an op",
      "additionalProperties": false
    },
    "fileParam": {
      "title": "fileParam",
      "description": "File parameter of an op",
      "type": "object",
      "additionalProperties": false
    },
    "socketParam": {
      "title": "socketParam",
      "description": "Socket parameter of an op",
      "type": "object",
      "additionalProperties": false
    },
    "stringParam": {
      "title": "stringParam",
      "description": "String parameter of an op",
      "type": "object",
      "properties": {
        "length": {
          "$ref": "constraints.json#/definitions/stringLengthConstraint"
        },
        "patterns": {
          "description": "Constrains a string to match patterns",
          "type": "array",
          "items": {
            "$ref": "constraints.json#/definitions/stringPatternConstraint"
          }
        },
        "default": {
          "description": "Default value of the parameter",
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
