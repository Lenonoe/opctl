{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://opspec.io/spec/0.1.3/schema/param.json",
  "title": "param",
  "description": "Parameter of an op",
  "oneOf": [
    {
      "$ref": "#/definitions/dirParam"
    },
    {
      "$ref": "#/definitions/fileParam"
    },
    {
      "$ref": "#/definitions/numberParam"
    },
    {
      "$ref": "#/definitions/socketParam"
    },
    {
      "$ref": "#/definitions/stringParam"
    }
  ],
  "definitions": {
    "dirParam": {
      "title": "dirParam",
      "properties": {
        "dir": {
          "description": "Directory parameter of an op",
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "default": {
              "description": "Default value; a relative path interpreted from the dir in which the op is run",
              "type": "string"
            },
            "isSecret": {
              "description": "If the directory is secret",
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "dir"
      ]
    },
    "fileParam": {
      "title": "fileParam",
      "properties": {
        "file": {
          "description": "File parameter of an op",
          "properties": {
            "description": {
              "type": "string"
            },
            "default": {
              "description": "Default value; a relative path interpreted from the dir in which the op is run",
              "type": "string"
            },
            "isSecret": {
              "description": "If the file is secret",
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "file"
      ]
    },
    "numberParam": {
      "title": "numberParam",
      "properties": {
        "number": {
          "description": "Number parameter of an op",
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "default": {
              "type": "string"
            },
            "isSecret": {
              "description": "If the number is secret",
              "type": "boolean"
            },
            "constraints": {
              "description": "Constraints for the number",
              "$ref": "https://opspec.io/spec/0.1.3/schema/constraint.json#/definitions/numberConstraints"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "number"
      ]
    },
    "socketParam": {
      "title": "socketParam",
      "properties": {
        "socket": {
          "description": "Socket parameter of an op",
          "properties": {
            "description": {
              "type": "string"
            },
            "isSecret": {
              "description": "If the socket is secret",
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "socket"
      ]
    },
    "stringParam": {
      "title": "stringParam",
      "properties": {
        "string": {
          "description": "String parameter of an op",
          "properties": {
            "description": {
              "type": "string"
            },
            "default": {
              "type": "string"
            },
            "isSecret": {
              "description": "If the string is secret",
              "type": "boolean"
            },
            "constraints": {
              "description": "Constraints for the string",
              "$ref": "https://opspec.io/spec/0.1.3/schema/constraint.json#/definitions/stringConstraints"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "string"
      ]
    }
  }
}
