{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://spec.opspec.io/0.1.3/schema/manifest.json",
  "title": "manifest",
  "description": "Manifest",
  "oneOf": [
    {
      "$ref": "#/definitions/opManifest"
    },
    {
      "$ref": "#/definitions/collectionManifest"
    }
  ],
  "definitions": {
    "collectionManifest": {
      "title": "collectionManifest",
      "description": "Manifest for a collection",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "ops": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/opRef"
          }
        },
        "version": {
          "$ref": "#/definitions/semVer"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "opManifest": {
      "title": "opManifest",
      "description": "Manifest for an op",
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the op",
          "type": "string"
        },
        "description": {
          "description": "Description of the op",
          "type": "string"
        },
        "inputs": {
          "description": "Inputs to the op",
          "type": "array",
          "items": {
            "$ref": "param-declaration.json"
          }
        },
        "outputs": {
          "description": "Outputs from the op",
          "type": "array",
          "items": {
            "$ref": "param-declaration.json"
          }
        },
        "run": {
          "description": "Call graph run when the op is instantiated",
          "$ref": "call-graph-declaration.json"
        },
        "version": {
          "description": "Version of the op",
          "$ref": "#/definitions/semVer"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "opRef": {
      "title": "opRef",
      "description": "Reference to an op",
      "type": "string"
    },
    "semVer": {
      "title": "semVer",
      "description": "v2.0.0 semantic version (see http://semver.org/spec/v2.0.0.html)",
      "type": "string",
      "pattern": "^([0-9]+)\\.([0-9]+)\\.([0-9]+)(?:(\\-[0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+[0-9A-Za-z-\\-\\.]+)?$"
    }
  }
}
