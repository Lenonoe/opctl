{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://spec.opspec.io/0.1.3/schema/constraints.json",
  "definitions": {
    "netSocketConstraints": {
      "title": "netSocketConstraints",
      "description": "Constraints on a network socket",
      "type": "object",
      "properties": {
        "portNumber": {
          "$ref": "#/definitions/netSocketPortNumberConstraint"
        }
      },
      "additionalProperties": false
    },
    "netSocketPortNumberConstraint": {
      "title": "netSocketPortNumberConstraint",
      "description": "Constrains the port number of a net socket",
      "type": "object",
      "properties": {
        "description": {
          "description": "Description of the constraint",
          "type": "string"
        },
        "number": {
          "description": "Valid port number",
          "type": "integer",
          "minimum": 0,
          "maximum": 65535
        }
      },
      "additionalProperties": false
    },
    "stringConstraints": {
      "title": "stringConstraints",
      "description": "Constraints on a string",
      "type": "object",
      "properties": {
        "length": {
          "$ref": "#/definitions/stringLengthConstraint"
        },
        "patterns": {
          "description": "Constrains a string to match patterns",
          "type": "array",
          "items": {
            "$ref": "#/definitions/stringPatternConstraint"
          }
        }
      },
      "additionalProperties": false
    },
    "stringLengthConstraint": {
      "title": "stringLengthConstraint",
      "description": "Constrains a strings length",
      "type": "object",
      "properties": {
        "description": {
          "description": "Description of the constraint",
          "type": "string"
        },
        "max": {
          "description": "Minimum valid length",
          "type": "integer",
          "minimum": 1
        },
        "min": {
          "description": "Minimum valid length",
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      },
      "additionalProperties": false
    },
    "stringPatternConstraint": {
      "title": "stringLengthConstraint",
      "description": "Constrains a string to match a pattern",
      "type": "object",
      "properties": {
        "description": {
          "description": "Description of the constraint",
          "type": "string"
        },
        "regex": {
          "description": "Regex the string must match",
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
