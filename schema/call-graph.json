{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://spec.opspec.io/0.1.3/schema/call-graph.json",
  "title": "callGraph",
  "oneOf": [
    {
      "$ref": "#/definitions/containerCall"
    },
    {
      "$ref": "#/definitions/opCall"
    },
    {
      "$ref": "#/definitions/parallelCall"
    },
    {
      "$ref": "#/definitions/serialCall"
    }
  ],
  "definitions": {
    "containerCall": {
      "title": "containerCall",
      "type": "object",
      "properties": {
        "cmd": {
          "$ref": "container.json#/definitions/containerCmd"
        },
        "dirs": {
          "type": "object",
          "patternProperties": {
            "^([a-zA-Z]:)?[-_.\\/a-zA-Z0-9]+$": {
              "$ref": "container.json#/definitions/containerDir"
            }
          },
          "additionalProperties": false
        },
        "envVars": {
          "type": "object",
          "patternProperties": {
            "^[^=]+$": {
              "$ref": "container.json#/definitions/containerEnvVar"
            }
          },
          "additionalProperties": false
        },
        "files": {
          "type": "object",
          "patternProperties": {
            "^([a-zA-Z]:)?[-_.\\/a-zA-Z0-9]+$": {
              "$ref": "container.json#/definitions/containerFile"
            }
          },
          "additionalProperties": false
        },
        "image": {
          "$ref": "container.json#/definitions/containerImageRef"
        },
        "sockets": {
          "type": "object",
          "patternProperties": {
            "[:a-zA-Z0-9]+": {
              "$ref": "container.json#/definitions/containerSocket"
            }
          },
          "additionalProperties": false
        },
        "stdErr": {
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "type": "object",
              "properties": {
                "bind": {
                  "description": "Variable to bind to",
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        },
        "stdOut": {
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "type": "object",
              "properties": {
                "bind": {
                  "description": "Variable to bind to",
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        },
        "workDir": {
          "description": "Working directory path (overrides any defined by image)",
          "type": "string"
        }
      }
    },
    "opCall": {
      "title": "opCall",
      "type": "object",
      "properties": {
        "op": {
          "type": "object",
          "properties": {
            "ref": {
              "$ref": "#/definitions/opRef"
            },
            "inputs": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "outputs": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "ref"
          ]
        }
      },
      "required": [
        "op"
      ],
      "additionalProperties": false
    },
    "parallelCall": {
      "title": "parallelCall",
      "type": "object",
      "properties": {
        "parallel": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        }
      },
      "required": [
        "parallel"
      ],
      "additionalProperties": false
    },
    "serialCall": {
      "title": "serialCall",
      "type": "object",
      "properties": {
        "serial": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        }
      },
      "required": [
        "serial"
      ],
      "additionalProperties": false
    },
    "opRef": {
      "title": "opRef",
      "description": "Reference to an op",
      "type": "string"
    }
  }
}
