{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://opspec.io/spec/0.1.2/schema/defs.json",
  "description": "Common definitions",
  "definitions": {
    "dockerImageRef": {
      "description": "Reference to a docker image",
      "title": "dockerImageRef",
      "type": "string",
      "pattern": "((registry_hostname/)?namespace/)?repo(:tag)"
    },
    "opRef": {
      "description": "Reference to an op",
      "title": "opRef",
      "type": "string"
    },
    "semVer": {
      "description": "v2.0.0 semantic version (see http://semver.org/spec/v2.0.0.html)",
      "title": "semVer",
      "type": "string",
      "pattern": "([0-9]+)\\.([0-9]+)\\.([0-9]+)(?:(\\-[0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+[0-9A-Za-z-\\-\\.]+)?"
    }
  }
}
