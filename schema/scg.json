{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://spec.opspec.io/0.1.3/schema/scg.json",
  "title": "scg",
  "oneOf": [
    {
      "$ref": "#/definitions/containerCall"
    },
    {
      "$ref": "#/definitions/opCall"
    },
    {
      "$ref": "#/definitions/parallelCall"
    },
    {
      "$ref": "#/definitions/serialCall"
    }
  ],
  "definitions": {
    "containerCall": {
      "title": "containerCall",
      "type": "object",
      "properties": {
        "cmd": {
          "description": "Command run by a container; overrides any set at the image level",
          "type": "array",
          "items": {
            "$ref": "#/definitions/interpolatedString"
          }
        },
        "dirs": {
          "type": "object",
          "patternProperties": {
            "^([a-zA-Z]:)?[-_.\\/a-zA-Z0-9]+$": {
              "description": "Container dir path mapped to a dir variable or bundle dir path. If no bundle dir path provided, container dir path will be used",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "envVars": {
          "type": "object",
          "patternProperties": {
            "^[^=]+$": {
              "description": "An environment variable in a container",
              "$ref": "#/definitions/interpolatedString"
            }
          },
          "additionalProperties": false
        },
        "files": {
          "type": "object",
          "patternProperties": {
            "^([a-zA-Z]:)?[-_.\\/a-zA-Z0-9]+$": {
              "description": "Container file path mapped to a file variable or bundle file path. If no bundle file path provided, container file path will be used",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "image": {
          "description": "Reference to a container image",
          "type": "string"
        },
        "sockets": {
          "type": "object",
          "patternProperties": {
            "[:a-zA-Z0-9]+": {
              "description": "Container socket address mapped to a socket variable",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "stdErr": {
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "description": "Container stderr prefix mapped to a string variable",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "stdOut": {
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "description": "Container stdout prefix mapped to a string variable",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "workDir": {
          "description": "Working directory path (overrides any defined by image)",
          "type": "string"
        }
      }
    },
    "opCall": {
      "title": "opCall",
      "type": "object",
      "properties": {
        "op": {
          "type": "object",
          "properties": {
            "ref": {
              "description": "Reference to an op",
              "type": "string"
            },
            "inputs": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "outputs": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "ref"
          ]
        }
      },
      "required": [
        "op"
      ],
      "additionalProperties": false
    },
    "parallelCall": {
      "title": "parallelCall",
      "type": "object",
      "properties": {
        "parallel": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        }
      },
      "required": [
        "parallel"
      ],
      "additionalProperties": false
    },
    "serialCall": {
      "title": "serialCall",
      "type": "object",
      "properties": {
        "serial": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        }
      },
      "required": [
        "serial"
      ],
      "additionalProperties": false
    },
    "interpolatedString":{
      "title": "interpolatedString",
      "description": "String supporting $(IN_SCOPE_VAR) substitution syntax where $(IN_SCOPE_VAR) will be replaced by the value of IN_SCOPE_VAR at runtime.",
      "type": "string"
    }
  }
}
