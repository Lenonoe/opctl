{
  "swagger": "2.0",
  "info": {
    "version": "0.0.0",
    "title": "Engine API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json",
    "text/html"
  ],
  "paths": {
    "/liveness": {
      "get": {
        "summary": "Gets the liveness of the engine",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/projects/{projectUrl}/ops": {
      "parameters": [
        {
          "name": "projectUrl",
          "in": "path",
          "description": "A projects url. For local projects use an absolute path",
          "required": true,
          "type": "string"
        }
      ],
      "get": {
        "summary": "List project ops",
        "tags": [
          "projects"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/OpDetailedView"
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "string"
            }
          }
        }
      },
      "post": {
        "summary": "Add project op",
        "tags": [
          "projects"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "The body of the request",
            "required": true,
            "schema": {
              "title": "AddOpReq",
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/projects/{projectUrl}/ops/{opName}/description": {
      "parameters": [
        {
          "name": "projectUrl",
          "in": "path",
          "description": "A projects url. For local projects use an absolute path",
          "required": true,
          "type": "string"
        },
        {
          "name": "opName",
          "in": "path",
          "description": "The name of the dev op",
          "required": true,
          "type": "string"
        }
      ],
      "put": {
        "summary": "Update description of project op",
        "tags": [
          "projects"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "The body of the request",
            "schema": {
              "title": "UpdateDescriptionOfOpReq",
              "type": "object",
              "required": [
                "description"
              ],
              "properties": {
                "description": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/projects/{projectUrl}/ops/{opName}/sub-ops": {
      "parameters": [
        {
          "name": "projectUrl",
          "in": "path",
          "description": "A projects url. For local projects use an absolute path",
          "required": true,
          "type": "string"
        },
        {
          "name": "opName",
          "in": "path",
          "description": "The name of the dev op",
          "required": true,
          "type": "string"
        }
      ],
      "post": {
        "summary": "Add sub-op",
        "tags": [
          "projects"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "The body of the request",
            "schema": {
              "title": "AddSubOpReq",
              "type": "object",
              "required": [
                "subOpUrl"
              ],
              "properties": {
                "subOpUrl": {
                  "type": "string"
                },
                "precedingSubOpUrl": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/op-runs": {
      "post": {
        "summary": "Run op",
        "tags": [
          "op-runs"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "The body of the request",
            "schema": {
              "title": "RunOpReq",
              "type": "object",
              "required": [
                "opUrl"
              ],
              "properties": {
                "opUrl": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "description": "The id of the op-run",
              "type": "string"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/event-stream": {
      "get": {
        "summary": "Get event stream",
        "description": "The connection will be upgraded to use the websocket protocol.",
        "tags": [
          "event-stream"
        ],
        "responses": {
          "101": {
            "description": "Switching Protocols",
            "headers": {
              "Upgrade": {
                "type": "string",
                "enum": [
                  "websocket"
                ]
              },
              "Connection": {
                "type": "string",
                "enum": [
                  "Upgrade"
                ]
              }
            },
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/EventMsg"
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "OpRunDetailedView": {
      "title": "OpRunDetailedView",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "opName": {
          "type": "string"
        },
        "startTime": {
          "type": "string",
          "format": "dateTime"
        },
        "finishTime": {
          "type": "string",
          "format": "dateTime"
        },
        "exitCode": {
          "type": "integer"
        },
        "subOps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/OpRunDetailedView"
          }
        }
      }
    },
    "OpSummaryView": {
      "title": "OpSummaryView",
      "description": "A reference to an op",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "OpDetailedView": {
      "title": "OpDetailedView",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "subOps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/OpSummaryView"
          }
        }
      }
    },
    "EventMsg": {
      "title": "EventMsg",
      "description": "A message containing event data",
      "type": "object",
      "discriminator": "type",
      "required":[
        "type",
        "data"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "data": {
          "type": "object"
        }
      }
    }
  }
}
